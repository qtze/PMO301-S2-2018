@model IdentityMatchingWebsite.Models.PersonFilterViewModel

@{
    ViewData["Title"] = "Index";
}


<div class="row">
   
    <div class="col-lg-8">
        <h3>Field Selection / Mapping:</h3>
        <form asp-controller="People" asp-action="Index" method="get">
            <table class="table">
                <thead>
                <tr>
                    <th><input class="check" id="checkFName" type="checkbox" value="firstname" onclick="isChecked()" >
                        First Name:<select class="form-control" id="dropDownFName" asp-for="personFirstName" disabled>
                            <option value="">All</option>
                            <option value="1">@Html.DisplayNameFor(model => model.peopletwo[0].FirstName)</option>
                            <option value="2">@Html.DisplayNameFor(model => model.peopletwo[0].Surname)</option>
                            <option value="3">@Html.DisplayNameFor(model => model.peopletwo[0].LegalSurname)</option>
                            <option value="4">@Html.DisplayNameFor(model => model.peopletwo[0].DateOfBirth)</option>
                        </select>
                    </th>

                    <th><input class="check" id="checkSurname" type="checkbox" value="surname" onclick="isChecked()" >
                        Surname:<select class="form-control" id="dropDownSurname" asp-for="personSurname" disabled>
                            <option value="">All</option>
                            <option value="1">@Html.DisplayNameFor(model => model.peopletwo[0].FirstName)</option>
                            <option value="2">@Html.DisplayNameFor(model => model.peopletwo[0].Surname)</option>
                            <option value="3">@Html.DisplayNameFor(model => model.peopletwo[0].LegalSurname)</option>
                            <option value="4">@Html.DisplayNameFor(model => model.peopletwo[0].DateOfBirth)</option>
                        </select>
                    </th>

                    <th><input class="check" id="checkLegalSurname" type="checkbox" value="legalsurname" onclick="isChecked()" >
                        Legal Surname:<select class="form-control" id="dropDownLegalSurname" asp-for="personLegalSurname" disabled>
                            <option value="">All</option>
                            <option value="1">@Html.DisplayNameFor(model => model.peopletwo[0].FirstName)</option>
                            <option value="2">@Html.DisplayNameFor(model => model.peopletwo[0].Surname)</option>
                            <option value="3">@Html.DisplayNameFor(model => model.peopletwo[0].LegalSurname)</option>
                            <option value="4">@Html.DisplayNameFor(model => model.peopletwo[0].DateOfBirth)</option>
                        </select>
                    </th>   

                    <th><input class="check" id="checkDoB" type="checkbox" value="dob" onclick="isChecked()">
                        DoB:<select class="form-control" id="dropDownDoB" asp-for="personDoB" disabled>
                            <option value="">All</option>
                            <option value="1">@Html.DisplayNameFor(model => model.peopletwo[0].FirstName)</option>
                            <option value="2">@Html.DisplayNameFor(model => model.peopletwo[0].Surname)</option>
                            <option value="3">@Html.DisplayNameFor(model => model.peopletwo[0].LegalSurname)</option>
                            <option value="4">@Html.DisplayNameFor(model => model.peopletwo[0].DateOfBirth)</option>
                        </select>
                    </th>
                </tr>

                </thead>
            </table>
            <input class="btn btn-default" id="submitCheck" type="submit" value="Compare Fields" onclick="isChecked()" />
        </form>
    </div><!-- /.col-lg-3 -->

</div><!-- /.row -->

<div class="row">
    <div class="col-lg-6">
        <h3>Table 1:</h3>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.people[0].FirstName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.people[0].Surname)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.people[0].LegalSurname)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.people[0].DateOfBirth)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.people)
                {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.FirstName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Surname)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LegalSurname)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DateOfBirth)
                            </td>

                            <td>

                            </td>

                        </tr>

                }
            </tbody>
        </table>
    </div><!-- /.col-lg-6 -->


    <div class="col-lg-6">
        <h3>Table 2:</h3>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.peopletwo[0].FirstName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.peopletwo[0].Surname)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.peopletwo[0].LegalSurname)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.peopletwo[0].DateOfBirth)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.peopletwo)
                {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.FirstName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Surname)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LegalSurname)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DateOfBirth)
                            </td>

                            <td>

                            </td>

                        </tr>
                }
            </tbody>
        </table>
    </div><!-- /.col-lg-6 -->
</div><!-- /.row -->




<div class="row">
    <div class="col-lg-12">

        <h3>Matched Results:</h3>
        <form method="post" enctype="multipart/form-data">

            <div class="row">
                <div class="col-md-8" style="padding-top:10px;">
                    <button class="btn btn-default" asp-action="OnPostExport">Export Results</button>
                </div>
            </div>
            <br />
            <div id="dvData"></div>
        </form>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.results[0].FirstName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.results[0].Surname)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.results[0].LegalSurname)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.results[0].DateOfBirth)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if (Model.results == null)
                {

                }
                else
                {
                    @foreach (var item in Model.results)
                    {

                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.FirstName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Surname)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LegalSurname)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DateOfBirth)
                            </td>

                        </tr>
                    }
                }


            </tbody>
        </table>

    </div><!-- /.col-lg-6 -->
</div><!-- /.row -->
